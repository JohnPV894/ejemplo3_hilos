<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ejemplos_hilos3_interfaz.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>

    <AnchorPane>
        <ImageView fx:id="coche1"
                   AnchorPane.topAnchor="5.0"
                   AnchorPane.bottomAnchor="5.0"
                   AnchorPane.leftAnchor="0.0"
                   preserveRatio="true">
            <Image url="@/img/audi.png"/>
        </ImageView>
    </AnchorPane>

    <AnchorPane>
        <ImageView fx:id="coche2"
                   AnchorPane.topAnchor="5.0"
                   AnchorPane.bottomAnchor="5.0"
                   AnchorPane.leftAnchor="0.0"
                   preserveRatio="true">
            <Image url="@/img/bmw.png"/>
        </ImageView>
    </AnchorPane>

    <AnchorPane>
        <ImageView fx:id="coche3"
                   AnchorPane.topAnchor="5.0"
                   AnchorPane.bottomAnchor="5.0"
                   AnchorPane.leftAnchor="0.0"
                   preserveRatio="true">
            <Image url="@/img/honda.png"/>
        </ImageView>
    </AnchorPane>

    <AnchorPane>
        <ImageView fx:id="coche4"
                   AnchorPane.topAnchor="5.0"
                   AnchorPane.bottomAnchor="5.0"
                   AnchorPane.leftAnchor="0.0"
                   preserveRatio="true">
            <Image url="@/img/peugeot.png"/>
        </ImageView>
    </AnchorPane>

    <AnchorPane>
        <ImageView fx:id="coche5"
                   AnchorPane.topAnchor="5.0"
                   AnchorPane.bottomAnchor="5.0"
                   AnchorPane.leftAnchor="0.0"
                   preserveRatio="true">
            <Image url="@/img/toyota.png"/>
        </ImageView>
    </AnchorPane>


    <Button text="Hello!" onAction="#onHelloButtonClick"/>
</VBox>
